# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Replit Auth Configuration (for session-based auth)
REPLIT_DOMAINS=your-repl.replit.dev
REPL_ID=your-repl-id
SESSION_SECRET=your-session-secret-here

# JWT Configuration (for token-based auth)
JWT_SECRET=your-jwt-secret-here-use-openssl-rand-base64-32

# Slack Integration
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Slack OAuth (for Slack login)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_OAUTH_REDIRECT_URI=https://your-app.com/api/auth/slack/callback

# Client Configuration
CLIENT_URL=http://localhost:5000

# Server Configuration
PORT=5000
NODE_ENV=development

# ============================================
# Authentication & Security Configuration
# ============================================

# JWT token expiry (format: 15m, 1h, 7d, etc.)
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# OIDC configuration cache TTL in milliseconds (default: 3600000 = 1 hour)
OIDC_CONFIG_CACHE_TTL_MS=3600000

# Session TTL (format: 7d, 1d, etc.)
SESSION_TTL=7d

# Slack webhook replay attack prevention timeout in seconds (default: 300 = 5 minutes)
SLACK_REPLAY_ATTACK_TIMEOUT_SEC=300

# HSTS max-age header in seconds (default: 31536000 = 1 year)
HSTS_MAX_AGE_SEC=31536000

# ============================================
# SLA & Follow-up Configuration
# ============================================

# Default SLA in minutes if not defined in playbook (default: 10)
DEFAULT_SLA_MINUTES=10

# Minutes before deadline to send nudge notification (default: 5)
SLA_NUDGE_MINUTES_BEFORE=5

# SLA warning threshold in milliseconds (default: 300000 = 5 minutes)
SLA_WARNING_THRESHOLD_MS=300000

# Default follow-up timeframe in hours (default: 4)
DEFAULT_FOLLOWUP_HOURS=4

# Default "few minutes" duration in milliseconds (default: 900000 = 15 minutes)
FOLLOWUP_FEW_MINUTES_MS=900000

# Default "few hours" duration in milliseconds (default: 7200000 = 2 hours)
FOLLOWUP_FEW_HOURS_MS=7200000

# Reminder thresholds in hours
REMINDER_THRESHOLD_24H=24
REMINDER_THRESHOLD_4H=4
REMINDER_THRESHOLD_1H=1

# ============================================
# Default Time Values
# ============================================

# End of day hour in 24-hour format (default: 17 = 5 PM)
END_OF_DAY_HOUR=17

# Default start hour for next day/week in 24-hour format (default: 9 = 9 AM)
DEFAULT_START_HOUR=9

# End of week hour in 24-hour format (default: 17 = 5 PM Friday)
WEEK_END_HOUR=17

# ============================================
# Scheduled Jobs Configuration
# ============================================

# SLA monitoring job (cron format, default: every minute)
SLA_CHECK_INTERVAL=* * * * *
SLA_CHECK_TIMEZONE=UTC

# Follow-up monitoring job (cron format, default: every 5 minutes)
FOLLOWUP_CHECK_INTERVAL=*/5 * * * *
FOLLOWUP_CHECK_TIMEZONE=UTC

# VA AM briefing (cron format, default: 8 AM weekdays)
VA_AM_BRIEFING_SCHEDULE=0 8 * * 1-5
VA_AM_BRIEFING_TIMEZONE=Asia/Manila

# VA PM briefing (cron format, default: 6 PM weekdays)
VA_PM_BRIEFING_SCHEDULE=0 18 * * 1-5
VA_PM_BRIEFING_TIMEZONE=Asia/Manila

# Manager daily digest (cron format, default: 9 AM weekdays)
MANAGER_DIGEST_SCHEDULE=0 9 * * 1-5
MANAGER_DIGEST_TIMEZONE=America/Chicago

# Manager weekly summary (cron format, default: 9 AM Monday)
MANAGER_WEEKLY_SCHEDULE=0 9 * * 1
MANAGER_WEEKLY_TIMEZONE=America/Chicago

# Daily metrics generation (cron format, default: 1 AM daily)
METRICS_GENERATION_SCHEDULE=0 1 * * *
METRICS_GENERATION_TIMEZONE=Asia/Manila

# Weekly audit cleanup (cron format, default: 2 AM Sunday)
AUDIT_CLEANUP_SCHEDULE=0 2 * * 0
AUDIT_CLEANUP_TIMEZONE=UTC

# ============================================
# Data Retention
# ============================================

# Audit log retention in days (default: 90)
AUDIT_RETENTION_DAYS=90

# ============================================
# File & Request Limits
# ============================================

# Webhook body size limit (default: 10mb)
WEBHOOK_BODY_SIZE_LIMIT=10mb

# ============================================
# WebSocket Configuration
# ============================================

# Heartbeat interval in milliseconds (default: 30000 = 30 seconds)
WEBSOCKET_HEARTBEAT_INTERVAL_MS=30000

# ============================================
# Metrics Configuration
# ============================================

# Fast completion threshold in hours (default: 2)
METRICS_FAST_COMPLETION_HOURS=2

# ============================================
# Default IDs (Channels, Users, etc.)
# ============================================

# Default triage channel ID (override with actual channel ID)
DEFAULT_TRIAGE_CHANNEL=C123456

# Default manager Slack ID (override with actual user ID)
DEFAULT_MANAGER_SLACK_ID=UJOREL

# Manager Slack ID for escalations (can be same as above or different)
MANAGER_SLACK_ID=UJOREL
