# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Replit Auth Configuration (for session-based auth)
REPLIT_DOMAINS=your-repl.replit.dev
REPL_ID=your-repl-id
SESSION_SECRET=your-session-secret-here

# JWT Configuration (for token-based auth)
JWT_SECRET=your-jwt-secret-here-use-openssl-rand-base64-32

# Slack Integration
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Slack OAuth (for Slack login)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_OAUTH_REDIRECT_URI=https://your-app.com/api/auth/slack/callback

# Client Configuration
CLIENT_URL=http://localhost:5000

# Server Configuration
PORT=5000
NODE_ENV=development
